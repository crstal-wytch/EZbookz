<h1>Listing receipts</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Pay type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @receipts.each do |receipt| %>
          <tr>
            <td><%= receipt.name %></td>
            <td><%= receipt.address %></td>
            <td><%= receipt.email %></td>
            <td><%= receipt.pay_type %></td>
            <td><%= link_to 'Show', receipt %></td>
            <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
            <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
<%= will_paginate @receipts %>
