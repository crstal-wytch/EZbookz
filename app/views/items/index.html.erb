<h1>Books for Sale</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Image url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.author %></td>
            <td><%= item.title %></td>
            <td><%= item.description %></td>
            <td>Â£<%= item.price %></td>
            <td><%= link_to (image_tag item.image_url, :style => 'height:100px'), item %></td>
            <td><%= link_to 'Show', item, class: 'btn btn-mini' %></td>
            <% if current_user %>
            <td><a href="/cart/<%= item.id %>">Add to Cart</a></td>
            <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', item, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            <% else %>
            <p>You must be logged in to buy this item</p>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

